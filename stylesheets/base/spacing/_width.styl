/*

   WIDTH

   Base:
    w

 */

.w
  // REM widths
  &--4
    width: 7.8125rem // 125px at desktop

  // Percentage based widths
  &--10
    width: 10%
  &--20
    width: 20%
  &--25
    width: 25%
  &--33
    width: 33%
  &--40
    width: 40%
  &--50
    width: 50%
  &--60
    width: 60%
  &--75
    width: 75%
  &--80
    width: 80%
  &--100
    width: 100%

  @media (min-width: 46.875rem)
    &--10--m
      width: 10%
    &--20--m
      width: 20%
    &--25--m
      width: 25%
    &--33--m
      width: 33%
    &--40--m
      width: 40%
    &--50--m
      width: 50%
    &--60--m
      width: 60%
    &--75--m
      width: 75%
    &--80--m
      width: 80%
    &--100--m
      width: 100%

  @media (min-width: 64rem)
    &--10--l
      width: 10%
    &--20--l
      width: 20%
    &--25--l
      width: 25%
    &--33--l
      width: 33%
    &--40--l
      width: 40%
    &--50--l
      width: 50%
    &--60--l
      width: 60%
    &--75--l
      width: 75%
    &--80--l
      width: 80%
    &--100--l
      width: 100%
