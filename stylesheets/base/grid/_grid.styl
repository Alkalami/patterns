@lost flexbox flex
@lost gutter 1.5rem

.g
  lost-flex-container: row

  &--4
    lost-column: 1/1;
    margin-bottom: $sizing-200

  @media $media-medium
    &--4
      lost-column: 1/2;
      margin-bottom: $sizing-300

  @media $media-large
    &--4
      lost-column: 1/4;
      margin-bottom: $sizing-000
