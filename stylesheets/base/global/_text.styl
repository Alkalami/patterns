// Text
.t
  &--intro
    color: $charles-blue
    font-family: $serif
    font-size: responsive 18px 30px
    font-range: 480px 1440px
    font-style: italic
    line-height: $line-height-300

  &--info
    color: $charles-blue
    font-family: $serif
    font-size: responsive 12px 20px
    font-range: 480px 1440px
    font-style: italic
    line-height: $line-height-300

  &--number
    color: $charles-blue
    font-family: $sans
    font-style: normal

// Text-alignment
.ta
  &-c
    text-align: center

// Text-transforms
.tt
  &-u
    text-transform: uppercase
