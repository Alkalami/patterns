.lnk
  color: $optimistic-blue

  &:link
    color: $optimistic-blue

  &:visited
    color: $optimistic-blue

  &:hover
    color: $freedom-red

  &--white
    color: $white

    &:link
      color: $white

    &:visited
      color: $white

    &:hover
      color: $freedom-red

  &--yellow
    color: $yellow

    &:link
      color: $yellow

    &:visited
      color: $yellow

    &:hover
      color: $white
