.ul
  list-style: none
  padding: 0 $sizing-500
  margin: 0

  & > li
    padding: 0
    margin: 0

    &:before
      content: ''
      border-color: transparent $charles-blue
      border-style: solid
      border-width: $border-400 0 $border-400 $border-500
      display: block
      position: relative
      height: 0
      width: 0
      left: -($sizing-400)
      top: 1rem
