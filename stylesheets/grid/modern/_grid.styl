@lost flexbox flex
@lost gutter 1.5rem

.g
  lost-flex-container: row
  margin-top: $sizing-200

  &--m0
    margin: 0

  &--mt0
    margin-top: 0

  &--p0
    padding: 0

  &--top
    align-items: flex-start

  &--1
    lost-column: 12/12

  &--2
    lost-column: 12/12

  &--3,
  &--33
    lost-column: 12/12

  &--4
    lost-column: 12/12

  &--5
    lost-column: 12/12

  &--6
    lost-column: 12/12

  &--7
    lost-column: 12/12

  &--8
    lost-column: 12/12

  &--9
    lost-column: 12/12

  &--10
    lost-column: 12/12

  &--11
    lost-column: 12/12

  &--12
    lost-column: 12/12

  &--4
    margin-top: $sizing-200

  @media $media-large
    &--1
      lost-column: 1/12

    &--2
      lost-column: 2/12

    &--3
      lost-column: 1/2

    &--4
      lost-column: 1/2

    &--44
      lost-column: 4/12

    &--5
      lost-column: 5/12

    &--6
      lost-column: 6/12

    &--7
      lost-column: 7/12

    &--8
      lost-column: 8/12

    &--10
      lost-column: 10/12

    &--11
      lost-column: 11/12

    &--12
      lost-column: 12/12

    &--4
      margin-top: $sizing-400

  @media $media-xlarge
    &--3
      lost-column: 1/3

    &--4
      lost-column: 1/4

    &--33
      lost-column: 3/12

    &--9
      lost-column: 9/12
