@lost flexbox flex
@lost gutter 1.5rem

.g
  lost-flex-container: row
  margin-top: $sizing-200

  &--m0
    margin-top: 0

  &--13,
  &--2,
  &--23,
  &--4,
    lost-column: 1/1

  &--4
    margin-top: $sizing-200

  @media $media-large
    &--2,
    &--4
      lost-column: 1/2

    &--13
      lost-column: 1/3

    &--23
      lost-column: 2/3

    &--4
      margin-top: $sizing-400

  @media $media-xlarge
    &--4
      lost-column: 1/4
