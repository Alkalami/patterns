@require 'variables/**/**.styl';
@require 'fonts/**/stylesheet.styl';

html,
body
  font-family: 'Lora', serif

a:link,
a:visited
  color: $optimistic-blue

a:hover
  color: $freedom-red

.intro
  color: $charles-blue
  font-family: $serif
  font-size: responsive 18px 30px
  font-range: 480px 1440px
  font-style: italic
  line-height: $line-height-300

.Tree
  &-collectionLabel,
  &-entityLink
    font-family: $sans
    font-weight: 300

  &-collectionLabel span::before
    top: 0.375rem

  &-title
    font-family: $sans
    font-weight: 700
    text-transform: uppercase
    color: $charles-blue
    font-size: 1rem
    letter-spacing: 0

.Document
  &-header
    border: none

  &-title
    color: $charles-blue
    font-family: $sans
    font-size: responsive 45px 62px
    font-range: 480px 1440px
    font-weight: 700
    line-height: $line-height-000
    text-transform: uppercase
    letter-spacing: -1px

.Prose
  font-family: 'Lora', serif
  font-size: 1.175rem
  line-height: 1.5

  h2
    color: $charles-blue
    font-family: $sans
    font-size: responsive 30px 45px
    font-range: 480px 1440px
    font-weight: 700
    line-height: $line-height-000
    text-transform: uppercase

  h3
    color: $charles-blue
    font-family: $serif
    font-size: responsive 20px 30px
    font-range: 480px 1440px
    font-weight: 300
    font-style: italic
    line-height: $line-height-000

.Header
  background-color: $charles-blue
  box-shadow: none

  &-button
    background-color: $freedom-red
    border: none

    &:hover
      background-color: $optimistic-blue

  &-title
    text-transform: uppercase
    font-weight: 900
    font-family: $sans
    letter-spacing: 1px
