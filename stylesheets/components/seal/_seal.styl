/*

   THE SEAL

   Base:
    s

   Modifier:
    u = up

 */

.s
  background-color: $seal-bg
  border-radius: 50%
  bottom: 0
  box-shadow: 0 4px 2px -2px rgba(0,0,0,0.2)
  display: block
  height: 106px
  width: 106px
  padding: 8px
  position: absolute
  z-index: -1
  left: 50%
  transform: translateX(-50%) translateY(40%)
  transition-property: all
  transition-duration: 0.25s
  transition-timing-function: ease-in

  &--u
    position: relative
    top: 0
    transform: translateX(-50%) translateY(-50%)
    box-shadow: none

  &-i
    height: 100%
    width: 100%
