/*

   Table

   Base:
    tbl

   Elements:
    h = header
    c = content
    ic = icon
    t = title
    st = subtitle

   Modifier:
    None Yet

 */

table {
  // Remove most spacing between table cells.
  border-collapse: collapse;
  border-spacing: 0;
  // Prevent cramped-looking tables
  width: 100%;
}

td,
th {
  padding: 0;
}

.responsive-table {
  border: none;
  @media (min-width: 768px) {
    border-width: 1px;
    border-style: solid;
  }
  &* {
    border-color: $charles-blue;
  }
  thead {
    display: none;
    text-transform: uppercase;
    @media (min-width: 768px) {
      display: table-header-group;
    }
    th {
      background-color: $charles-blue;
      font-family: $sans;
      font-weight: inherit;
      line-height: 2.16667em;
      text-transform: uppercase;
      color: $white;
      text-align: right;
      padding: 10px;
      @media (min-width: 768px) {
        display: table-cell;
      }
      &:first-of-type {
        text-align: left;
      }
    }
  }
  tbody {
    color: $charles-blue;
    tr {
      display: block;
      @media (min-width: 768px) {
        display: table-row;
      }
      &:nth-child(odd) {
        background-color: #F2F2F2;
      }
      &:before {
        display: block;
        @media (min-width: 768px) {
          display: none;
        }
      }
      &:after {
        content: "";
        display: table;
        clear: both;
        margin-bottom: 15px;
        @media (min-width: 768px) {
          display: none;
          margin-bottom: 0;
        }
      }
      td {
        display: block;
        float: left;
        clear: left;
        width: 100%;
        text-align: right;
        padding: 10px;
        line-height: 2.16667em;
        &:first-of-type {
          text-align: left;
          font-style: italic;
        }
        @media (min-width: 768px) {
          width: inherit;
          clear: none;
          float: none;
          display: table-cell;
        }
        &:before {
          content: attr(data-label);
          float: left;
          text-transform: uppercase;
          font-weight: bold;
          @media (min-width: 768px) {
            display: none;
          }
        }
      }
    }
  }
}


tbody {
  tr {
    td {
      border: none;
      text-align: right;
    }
  }
  tr.total {
    background-color: $charles-blue;
    color: white;
  }
  tr.subtotal {
    background-color: #58585B;
    color: white;
  }
}
@media (max-width: 767px) {
.responsive-table tbody tr td:first-of-type,
.responsive-table tbody tr td.table-left {
  text-align: right;
}
}

table.responsive-table th {
  border: 1px solid $charles-blue;
}

table.responsive-table--horizontal th:not(:last-child) {
  border-right-color: $white;
}
table.responsive-table--vertical tr:not(:last-child) th {
  border-bottom-color: $white;
}
