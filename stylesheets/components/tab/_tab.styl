/*

   Tabs

   Base:
    tab

   Modifier:

 */

.tab
  margin: 0 auto
  padding: 0
  text-align: center

  @media $media-large
    white-space: nowrap

  @media $media-xlarge
    white-space: normal

  &-p
    display: none

  &-li
    box-sizing: border-box
    position: relative
    display: none

    &:not(:last-child)
      border-bottom: none

    @media $media-large
      display: inline-block
      border: none
      margin: 0 1px
      height: auto

    @media $media-xlarge
      display: inline-block
      border: none
      margin: 0 1px
      width: 23%

    &-a
      background: $white
      color: $charles-blue
      cursor: pointer
      display: block
      font-family: $sans
      padding: $sizing-300
      text-align: center
      text-decoration: none
      text-transform: uppercase
      font-size: responsive 12px 16px
      font-range: 480px 1440px
      font-weight: 300
      line-height: 1
      white-space: nowrap

      @media $media-large
        background: $charles-blue
        color: $optimistic-blue
        padding: $sizing-300 $sizing-500

      @media $media-xlarge
        padding: $sizing-400 0

      &:hover
        color: $freedom-red

        @media $media-large
          color: $freedom-red

      &--c
        background-color: $optimistic-blue
        color: $white

        &:hover
          color: $white

        @media $media-large
          display: none

    &-m
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      display: none


// Handle the selected state of the menu
.tab-menu-ctrl
  display: none

  &:checked ~ .tab
    & .tab-li
      @media $media-large-max
        display: block

// Handle the selected states of tabs
.tab-ctrl
  display: none

  // Here, we manage the tab state
  &-0:checked ~ .tab .tab-li-0,
  &-1:checked ~ .tab .tab-li-1,
  &-2:checked ~ .tab .tab-li-2,
  &-3:checked ~ .tab .tab-li-3
    @media $media-large-max
      display: block

    .tab-li-m
      @media $media-large-max
        display: block

  // Here, we manage the link state of each tab
  &-0:checked ~ .tab .tab-li-a-0,
  &-1:checked ~ .tab .tab-li-a-1,
  &-2:checked ~ .tab .tab-li-a-2,
  &-3:checked ~ .tab .tab-li-a-3
    color: $white
    background-color: $charles-blue

    @media $media-large-max
      &:after
        content: ''
        background: url(/images/global/icons/chevron.svg) no-repeat right center
        height: 20px
        width: 14px
        position: absolute
        right: $sizing-400
        top: 50%
        transform: translateY(-52%)
        transition: 0.125s all

    @media $media-large
      color: $charles-blue
      background-color: $white

    &:hover
      color: $charles-blue
      background-color: $white

  // Here, we manage the state of each panel
  &-0:checked ~ .tab-pc .tab-p-0,
  &-1:checked ~ .tab-pc .tab-p-1,
  &-2:checked ~ .tab-pc .tab-p-2,
  &-3:checked ~ .tab-pc .tab-p-3
    display: block
