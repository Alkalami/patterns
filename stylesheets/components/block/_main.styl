/*

   BLOCKS

   Base:
    b

   Modifier:
    fw = full-width
    g = grey
    b = blue

   Element:
    c = content
    fv = filters (vertical)
 */

.b
  // Block content
  &-c
    max-width: 66.67rem
    margin: 0 auto
    padding: $sizing-700 10%

    &--mh
      min-height: 500px

    // Smaller vertical padding
    &--smv
      padding-top: $sizing-500
      padding-bottom: $sizing-500

    // Xtra small vertical padding
    &--xsmv
      padding-top: $sizing-300
      padding-bottom: $sizing-300

    &--nbp
      padding-bottom: 0

  // Vertical filters tab
  &-fv
    max-width: 66.67rem
    margin: 0 auto
    padding: $sizing-300 10%

  &--fw
    left: 50%
    position: relative
    transform: translate(-50%,0)
    width: 100vw

  &--b
  &--dark-blue
    background-color: $charles-blue

  &--red
    background-color: $freedom-red

  &--by
    border-top: $border-400 solid $yellow

  // Block with grey background
  &--g
    background-color: $grey-000

  // Block with white background
  &--w
    background-color: #ffffff

  // Blocks with padding
  &--p300
    padding: $sizing-300

  // Blocks with margin
  &--mb300
    margin-bottom: $sizing-300

  @media $media-xxlarge
    &-c
      padding: $sizing-800 0

      // Smaller vertical padding
      &--smv
        padding-top: $sizing-500
        padding-bottom: $sizing-500

      // Xtra small vertical padding
      &--xsmv
        padding-top: $sizing-300
        padding-bottom: $sizing-300

      &--nbp
        padding-bottom: 0

    &-fv
      padding: $sizing-300
