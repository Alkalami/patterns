/*

   BLOCKS

   Base:
    b

   Modifier:
    fw = full-width
    g = grey
    b = blue

 */

.b
  // Block content
  &-c
    max-width: 66.67rem
    margin: 0 auto
    padding: $sizing-700 $sizing-300

  &--fw
    left: 50%;
    position: relative;
    transform: translate(-50%,0);
    width: 100vw;

  // Block with grey background
  &--g
    background-color: $grey-000

  @media $media-large
    &-c
      padding: $sizing-800 10%

  @media $media-xlarge
    &-c
      padding: $sizing-800 0
