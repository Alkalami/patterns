/*

   HEADER NAV

   Base:
    nv-h

 */

.nv
  &-h
    &-l
      list-style: none
      margin: 0
      padding: 0
      display: flex
      align-items: center

      &-i
        margin: 0
        padding: 0

      &-a
        color: $charles-blue
        display: none
        font-family: $sans
        font-size: $font-200
        line-height: 65px
        letter-spacing: 1.4px
        margin-left: $sizing-400
        text-decoration: none
        text-transform: uppercase

        &--k
          display: block

          &--s
            display: none

            @media $media-small
              display: block

        @media $media-large
          display: block

        &-ic
          cursor: pointer
          width: 20px
          height: 20px
          margin-top: -24px

          @media $media-large
            width: 32px
            height: 32px
            margin-top: -8px

        &-i
          fill: $freedom-red
          width: 100%
          height: 100%
