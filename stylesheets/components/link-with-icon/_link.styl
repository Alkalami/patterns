/*

   LINK WITH ICON

   Base:
    lwi

   Modifier:
    None Yet

 */

.lwi
  display: flex
  align-items: center
  padding: $sizing-500
  background-color: $white
  text-decoration: none

  &:hover
    color: $white
    background-color: $optimistic-blue

  // Image container
  &-ic
    width: 25%
    padding-top: $sizing-000
    padding-bottom: $sizing-000

  // Icon
  &-i
    max-width: 85%
    max-height: 100%
    display: block

  &-t
    margin-left: 5%
    width: 70%
    font-style: italic
    font-size: $font500

  &:hover
    background-color: $optimistic-blue
    color: $white

  @media $media-medium

    display: block
    padding: $sizing-600

    // Containing link, image container, text
    &-ic, &-t
      display: block
      text-align: center
      width: 100%

    &-ic
      margin-bottom: $sizing-300

    &-i
      margin: 0 auto

    &-t
      font-style: italic
      font-size: $font600
      line-height: $line-height-200
      margin-left: 0
      width: 100%
