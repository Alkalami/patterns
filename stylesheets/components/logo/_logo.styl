/*

   logo

   Base:
    lo

   Elements:
    i = icon
    ic = icon container
    tt = tooltip

   Modifier:
    None Yet

 */

.lo
  &--abs
    position: absolute
    left: 85px
    top: 50%
    transform: translateY(-50%)

  &-l
    align-items: center
    color: $charles-blue
    display: flex
    text-decoration: none

    &:hover
      color: $charles-blue

  &-i
    display: block
    margin-bottom: -4px
    width: 120px

    @media $media-large
      width: 130px

    @media $media-xlarge
      width: 140px

  &-t
    border-left: 1px solid $charles-blue
    color: $charles-blue
    display: none
    font-family: $serif
    font-size: responsive 14px 16px
    font-range: 480px 1440px
    font-style: italic
    margin-left: $sizing-300
    padding-left: $sizing-300
    text-decoration: none

    @media screen and (min-width: 1054px)
      display: block
