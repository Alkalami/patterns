/*

   Checkboxes

   Base:
    cb

   Elements:
    l = label
    f = field

   Modifier:
    None Yet

 */

.cb
  display: flex
  align-items: center

  &:not(:last-child)
    margin-bottom: $sizing-200

  &-f
    height: 35px
    margin: 0
    padding: 0
    width: 35px

    @media $media-medium
      height: 42px
      width: 42px

    &:before
      content: ""
      display: block
      height: 35px
      width: 35px
      background-color: #ffffff
      border: 3px solid $charles-blue
      box-sizing: border-box

      @media $media-medium
        height: 42px
        width: 42px

    &:checked
      &:before
        background: #ffffff $check no-repeat center

    &:focus
      &:before
        box-shadow: 0 0 0 3px $optimistic-blue

  &-l
    color: $charles-blue
    font-family: $sans
    font-size: responsive 14px 16px
    font-range: 480px 1440px
    margin-left: 7px
    text-transform: uppercase
    width: calc(100% - 42px)

    @media $media-medium
      margin-left: 15px
