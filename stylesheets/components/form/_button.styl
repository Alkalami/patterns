/*

   Checkboxes

   Base:
    btn

   Modifier:
    c = charles blue
    sb = small block (becomes block on small screens)

 */

.btn
  background-color: $optimistic-blue
  color: $white
  font-family: $sans
  font-size: responsive 14px 16px
  font-range: 480px 1440px
  font-weight: 700
  letter-spacing: 1px
  line-height: 1rem
  margin: 0
  padding: $sizing-400
  text-transform: uppercase
  text-decoration: none
  border: none
  cursor: pointer
  display: inline-block

  &:link
  &:visited
    color: white

  &:hover
    background-color: $freedom-red
    color: white

  &:disabled
    cursor: default
    background-color: $grey-100

    &:hover
      background-color: $grey-100
      color: white

  &--ib
    display: inline-block

  &--b
    display: block
    text-align: center

  &--c
    background-color: $charles-blue

    &:hover
      background-color: $freedom-red

  &--y
    background-color: $yellow

    &:hover
      background-color: $yellow-hover
      color: white

  &--w
    background-color: $white
    color: $optimistic-blue

    &:hover
      background-color: $optimistic-blue
      color: $white

  &--r-hov
    &:hover
      background-color: $freedom-red
      color: $white

  &--sb
    margin-top: 0.5rem

    @media $media-xlarge
      margin-top: 0

  &--100
    padding: $sizing-200 $sizing-300

  &--200
    padding: $sizing-300

    &--m
      @media $media-medium
        padding: $sizing-300

  &--300
    padding: $sizing-400

    &--l
      @media $media-large
        padding: $sizing-400

  &--700
    padding: $sizing-400 $sizing-900
