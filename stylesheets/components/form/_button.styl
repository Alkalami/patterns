/*

   Checkboxes

   Base:
    btn

   Modifier:
    c = charles blue
    sb = small block (becomes block on small screens)

 */

.btn
  background-color: $optimistic-blue
  color: $white
  font-family: $sans
  font-size: $font-200
  font-weight: 700
  letter-spacing: 1px
  line-height: 1
  padding: $sizing-300 $sizing-500
  text-transform: uppercase
  text-decoration: none
  border: none
  cursor: pointer

  &:hover
    background-color: $freedom-red
    color: white

  &:disabled
    cursor: default
    background-color: $grey-300

    &:hover
      background-color: $grey-300
      color: white

  &--ib
    display: inline-block

  &--b
    display: block
    text-align: center

  &--c
    background-color: $charles-blue

  &--y
    background-color: $yellow

    &:hover
      background-color: $yellow-hover
      color: white

  &--w
    background-color: $white
    color: $optimistic-blue

    &:hover
      background-color: $optimistic-blue
      color: $white

  &--r-hov
    &:hover
      background-color: $freedom-red
      color: $white

  &--sb
    margin-top: 0.5rem

    @media $media-xlarge
      margin-top: 0
