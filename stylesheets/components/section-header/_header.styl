/*

   SECTION HEADERS

   Base:
    sh

   Modifier:
    w = white
    y = yellow

 */

.sh
  border-bottom: $border-400 solid $charles-blue
  padding-bottom: $sizing-100

  &-title
    margin: 0 0 $sizing-100
    font-family: $sans
    font-size: responsive 20px 45px
    font-size: $font700
    font-weight: 700
    padding-right: $sizing-300
    line-height: 1
    color: $charles-blue
    text-transform: uppercase

  &-contact
    font-size: $font300
    font-style: italic
    line-height: $line-height-100

    a, a:link, a:visited
      color: $freedom-red

      &:hover
        color: $optimistic-blue

  &--light
    border-color: #ffffff

  &--y
    border-color: $yellow

    .sh
      &-title
        color: $yellow

  &--b0
    border: none

  @media $media-xlarge
    display: flex
    align-items: flex-end

    &-title
      margin: 0

    &-contact
      margin-left: auto
      text-align: right
