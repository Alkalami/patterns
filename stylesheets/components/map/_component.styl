/*

   Map

   Base:
    mp

   Elements:
    t = title
    i = intro
    sh = subheader

 */

.mp
  width: 100%
  padding-bottom: 48%

  &-h
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index: 2

    &-i
      background: rgb(255,255,255)
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      width: 90%

  .legend
    border-radius: 0
    color: $charles-blue
    background-color: rgb(255,255,255)
    padding: $sizing-200 $sizing-300
    font-family: $sans
    font-weight: bold
    text-transform: uppercase

    i
      display: inline-block
      height: $sizing-200
      width: $sizing-200
      margin-right: $sizing-200
